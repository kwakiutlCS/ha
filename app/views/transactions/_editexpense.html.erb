<%= form_for @editable, remote: true, html: {id: "edit_transaction_expense"}  do |f| %>

<p>
<% @transaction.errors.full_messages.each do |m| %>
<%= m %>
<% end %>
</p>

<%= f.hidden_field :transaction_type, :value => "false", id:"edit_transaction_type_expense" %>

<p>
<%= f.label :value, "Value" %>
<%= f.number_field :value, min: 0, step: 0.01, placeholder: "0.00", id: "edit_transaction_value_expense" %>
</p>

<%= f.hidden_field :category, id:"edit_transaction_category_expenses", :value => "None" %>
<div class="menu_wrapper">
<ul class="menu" id="edit_expenses_category_menu">
  <li> <span>No Category</span>
    <ul class="submenu">
      <li><a href="#">No Category</a></li>
      <% current_user.categories.each do |c| %>
      <% if c.transaction_type == false %>
      <li><a href="#"><%= c.title.capitalize %></a></li>
      <% end %>
      <% end %>
    </ul>
</ul>
</div>


<p>
  <%= f.label :date %>
  <%= f.text_field :date, class: "date_selector", :value => @transaction.date.strftime("%B %d, %Y"), id: "edit_transaction_date_expense" %>
</p>

<p>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 8, cols:32, placeholder: "Optional description...", maxlength: 255, id: "edit_transaction_description_expense"  %>
</p>




<p><%= f.submit %></p>

<% end %>


<%= link_to "close", "#", id: "edit_expense_form_closer" %>
