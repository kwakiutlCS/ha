<%= form_for @transaction do |f| %>

<p>
<% @transaction.errors.full_messages.each do |m| %>
<%= m %>
<% end %>
</p>

<p>
<%= f.label :value_cents, "Value" %>
<%= f.number_field :value_cents, min: 0, step: 0.01 %>
</p>

<p>
  <%= f.label :category_id %>
  <%= f.text_field :category_id %>
</p>

<p>
  <%= f.label :date %>
  <%= f.text_field :date %>
</p>

<p>
  <%= f.label :description %>
  <%= f.text_field :description %>
</p>

<p><%= f.submit %></p>

<% end %>
